generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FolioProduct {
  id                      Int @id @default(autoincrement())
  type                    String
  book_id                 Int @unique
  sku                     String
  title                   String
  author                  Json
  illustrator             Json
  introduced_by           Json
  afterword_by            Json
  pages                   String
  short_description       String
  editor_note_description String
  collection_text         String
  category                String
  publication_date        DateTime?
  price                   Float
  url                     String
  main_image              String
  thumbnail_image         String
  media                   Json
  visibility              Json
  stock_status            Int
  store                   Int
  verbosity               Int
  stock                   FolioStock? @relation("ProductStock")
  
}

model FolioStock {
  id                      Int @id @default(autoincrement())
  type                    String
  book_id                 Int @unique
  is_out_temp             Boolean
  quantity                Int
  product                 FolioProduct @relation("ProductStock", fields: [book_id], references: [book_id])
}